pkgname=forkpanel
pkgver=0.$(date +%s)
pkgrel=1
pkgdesc="fork of fbpanel"
arch=(i686 x86_64)
provides=(fbpanel)
conflicts=(fbpanel)
makedepends=(git automake autoconf)
url=https://github.com/yardenac/${pkgname}
depends=(gtk2)
license=(GPL)
source=("git+${url}.git")
sha512sums=('SKIP')

pkgver() {
	cd "${srcdir}/${pkgname}"
	local ver="$(git rev-list --count HEAD).$(git rev-parse --short HEAD)"
	printf "%s" "${ver//-/.}"
}

build() {
	cd "${srcdir}/${pkgname}"
	./configure --prefix=/usr
	echo "LDFLAGSX += -lX11 -lm" >>config.mk
	ionice -c 3 nice -n 19 make
}
package() {
	cd "${srcdir}/${pkgname}"
	make DESTDIR="$pkgdir/" install
}
