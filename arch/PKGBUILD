pkgname=forkpanel
pkgver=20120620
pkgrel=1
pkgdesc="fork of fbpanel"
arch=(i686 x86_64)
provides=(fbpanel)
conflicts=(fbpanel)
makedepends=(git automake autoconf)
url=https://github.com/twomen/forkpanel
depends=(gtk2)
license=GPL
_gitroot=https://github.com/twomen/forkpanel.git
_gitname=forkpanel

build() {
	cd $srcdir
	[ -d $srcdir/$_gitname ] \
		 && cd $_gitname && git pull origin \
		 || git clone $_gitroot
	cd $srcdir/$_gitname
	./configure --prefix=/usr
	echo "LDFLAGSX += -lX11 -lm" >>config.mk
	ionice -c 3 nice -n 19 make
}
package() {
	cd $srcdir/$_gitname
	make DESTDIR="$pkgdir/" install
}
